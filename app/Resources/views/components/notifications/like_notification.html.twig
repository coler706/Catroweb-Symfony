<div class="catro-notification panel panel-primary" id="catro-notification-{{ notification.id }}">
  <div class="panel-heading">
    <h3 class="panel-title">
      {{ 'catro-notifications.like.title'|trans({'%program_name%' : notification.program.name}, 'catroweb') }}
    </h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-12">

        {{ 'catro-notifications.like.messagePart1'|trans({}, 'catroweb') }}
        <a href="{{ path('profile', {'id': notification.getLikeFrom.id}) }}">{{ notification.getLikeFrom.getUserName }}</a>
        {{ 'catro-notifications.like.messagePart2'|trans({}, 'catroweb') }}
        <a href="{{ path('program', {'id': notification.program.id}) }}">{{ notification.program.name }}</a>!

      </div>
      <div class="col-md-12">
      </div>
    </div>
    <button class="btn btn-primary" onclick="markAsRead({{ notification.id }})">Mark as read</button>
  </div>
</div>
